<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <title>Editar Conta</title>
</head>
<body>
    <h1>Editar Conta</h1>
    <form action="/editar" method="POST">
        <label for="nome">Nome:</label>
        <input type="text" id="nome" name="nome" value="<%= user.nome %>" required>

        <label for="email">Email:</label>
        <input type="email" id="email" name="email" value="<%= user.email %>" required>

        <label for="telefone">Telefone:</label>
        <input type="text" id="telefone" name="telefone" value="<%= user.telefone %>" required>

        <label for="cep">CEP:</label>
        <input type="text" id="cep" name="cep" value="<%= user.cep %>" required>

        <label for="cpf">CPF:</label>
        <input type="text" id="cpf" name="cpf" value="<%= user.cpf %>" required>

        <h2>Tipos de Serviço</h2>
        <% const servicosSelecionados = [user.tipo_servico_1, user.tipo_servico_2, user.tipo_servico_3, user.tipo_servico_4, user.tipo_servico_5]; %>

        <div class="cadastro-pedreiro-checkbox">
            <input type="checkbox" id="eletrica" name="tipos_servicos[]" value="3" <%= servicosSelecionados.includes(3) ? 'checked' : '' %> >
            <label for="eletrica">Elétrica</label>
        </div>

        <div class="cadastro-pedreiro-checkbox">
            <input type="checkbox" id="hidraulica" name="tipos_servicos[]" value="4" <%= servicosSelecionados.includes(4) ? 'checked' : '' %> >
            <label for="hidraulica">Hidráulica</label>
        </div>

        <div class="cadastro-pedreiro-checkbox">
            <input type="checkbox" id="alvenaria" name="tipos_servicos[]" value="5" <%= servicosSelecionados.includes(5) ? 'checked' : '' %> >
            <label for="alvenaria">Alvenaria</label>
        </div>

        <div class="cadastro-pedreiro-checkbox">
            <input type="checkbox" id="jardinagem" name="tipos_servicos[]" value="6" <%= servicosSelecionados.includes(6) ? 'checked' : '' %> >
            <label for="jardinagem">Jardinagem</label>
        </div>

        <!-- Adicione os outros serviços seguindo o mesmo padrão -->

        <button type="submit">Salvar Alterações</button>
    </form>
</body>
</html>
